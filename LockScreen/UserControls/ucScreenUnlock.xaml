             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LockScreen.UserControls" x:Name="uc"
             mc:Ignorable="d">
    <UserControl.Resources>
        
    </UserControl.Resources>
    <Grid Background="Transparent">
        <Border BorderBrush="#eaeaea" CornerRadius="{Binding CornerRadius,Mode=TwoWay,ElementName=uc}" Background="Transparent" BorderThickness="0">
            <Canvas x:Name="canvasRoot"/>
        </Border>
    </Grid>
</UserControl>
